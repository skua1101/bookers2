<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <header class="navbar navbar-inverse">
      <div class="container">
      	<nav class="nav navbar-nav nabvbar-left">
      		<span>Bookers</span>
      	</nav>

        <nav>
      	  <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
              <li class="nav-item">
                <%= link_to " Home", user_path(current_user), class: "glyphicon glyphicon-home" %>
              </li>
              <li class="nav-item">
                <%= link_to " Users", users_path, class: "glyphicon glyphicon-user" %>
              </li>
              <li class="nav-item">
                <%= link_to " Books", books_path, class: "glyphicon glyphicon-book" %>
              </li>
              <li class="nav-item">
                <%= link_to " logout", destroy_user_session_path, method: :delete, class: "glyphicon glyphicon-log-out" %>
              </li>

            <% else %>
              <li class="nav-item">
                <%= link_to " Home",root_path, class: "glyphicon glyphicon-home" %>
              </li>
              <li class="nav-item">
                <%= link_to " About", home_about_path, class: "glyphicon glyphicon-link" %>
              </li>
              <li class="nav-item">
                <%= link_to " Sign up", new_user_registration_path, class: "glyphicon glyphicon-edit" %>
              </li>
              <li class="nav-item">
                <%= link_to " login", user_session_path, class: "glyphicon glyphicon-log-in" %>
              </li>
            <% end %>
          </ul>
        </nav>
      </div>
    </header>
    <%= yield %>
  </body>

  <footer>
    <div class="container">
      <div class="row">
        <div class="col-xs-3 col-xs-offset-9">CopyRight Infratop.inc</div>
      </div>
    </div>
  </footer>
</html>
