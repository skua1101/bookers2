<!--サイドバー-->
<div class="row">
  <div class="col-xs-3">
    <%= render 'users/userinfo', user: @user %> <!--User infoの部分テンプレート-->
    <%= render 'books/newbook', book: @book_new %> <!--New bookの部分テンプレート-->
  </div>
</div>

<div class="col-xs-9">
      <h1>Book detail</h1>
      <table class="table table-user-show">
        <tr>
          <td><%= image_tag @book.user.get_profile_image("100x100") %></td>
          <td><%= link_to @user.name, user_path(@user) %></td>
          <td><%= @book.title %></td>
          <td><%= @book.body %></td>
          <% if @book.user_id == current_user.id %>
            <td><%= link_to "Edit", edit_book_path(@book), class:"btn btn-success"%></td>
            <td><%= link_to "Destroy", book_path(@book), method: :delete, data: {confirm: "本当に消しますか？"}, class:"btn btn-danger" %></td>
          <% end %>
        </tr>
      </table>
    </div>

