<!--サイドバー-->
<div class="row">
  <div class="col-xs-3">
    <%= render 'users/userinfo', user: @user %> <!--User infoの部分テンプレート-->
    <%= render 'books/newbook', book: @book %> <!--New bookの部分テンプレート-->
  </div>
</div>

</div>
    <div class="col-xs-9">
      <table class="table book-index">
        <h2>Books</h2>
        <thead>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to user_path(book.user) do %>
                 <%= image_tag book.user.get_profile_image("100x100") %>
                <% end %>
              </td>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
