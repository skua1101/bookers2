<div class="container">
 <!--サイドバー-->
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/userinfo', user: @user %> <!--User infoの部分テンプレート-->
      <%= render 'books/newbook', book: @book %> <!--New bookの部分テンプレート-->
    </div>

    <div class="col-md-8 offset-md-1">
      <table class="table table-user-show">
          <h2>Books</h2>
        <% @books.each do |book| %>
          <tr>
            <td><%= link_to user_path(@user) do %>
               <%= image_tag @user.get_profile_image("100x100") %>
            <% end %></td>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>